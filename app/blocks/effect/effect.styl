+below(699px)
	.effect
		display none

+between(700px, 1199px)
	.effect
		position relative
		width 100%
		padding 0 5.71%
		background-color #fff
		clear both

		&__diagram
			position relative
			display block
			size(43.14vw, 37.43vw)
			
		&__timer-svg
			size(100%)
			fill #DEDEDE

		&__time
			size(24.7vw)
			padding-top 0px

			position absolute
			top 9vw
			left 9vw

			text-align center
			font-weight 700
			font-size 14.93vw
			line-height 20vw 
			color pinkColor

			border 1.57vw solid pinkColor
			border-radius 50%

		&__description
			display block    
			width 44.29vw
			margin-bottom 10.86vw

			position absolute
			top 6vw
			right 5.71%

		&__headline
			width 54%
			margin-bottom 1.43vw

			font-weight 700
			font-size 4.28vw
			line-height 5.14vw

		&__paragraph 
			font-size 2vw
			line-height 3.43vw
			margin-bottom 1.57vw

		&__link
			line-height 3.43vw
			font-size 2vw
			color pinkColor

			&:hover
				color itemColor
